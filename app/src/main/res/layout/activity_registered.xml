<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisteredActivity">
    <RelativeLayout
        android:id="@+id/reone"
        android:layout_marginTop="@dimen/dp_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_centerInParent="true"
            android:id="@+id/re_pgone"
            android:background="@drawable/loginshape"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_height="wrap_content">
            <EditText
                android:textCursorDrawable="@null"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/et_login_phone"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_60"
            android:background="@drawable/loginshapefalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:text="账号"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/reone"
        android:id="@+id/retwo"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_centerInParent="true"
            android:id="@+id/re_pwd"
            android:background="@drawable/loginshape"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_height="wrap_content">
            <EditText
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/et_login_pwd"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"/>
            <RelativeLayout
                android:id="@+id/rethere"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:background="@drawable/see"
                    android:layout_height="@dimen/dp_20"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_60"
            android:background="@drawable/loginshapefalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:text="密码"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <io.armcha.elasticview.ElasticView
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_below="@id/retwo"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/et_login_sure"
            android:text="注册"
            android:layout_width="match_parent"
            android:background="@drawable/loginshape"
            android:layout_height="wrap_content"/>
    </io.armcha.elasticview.ElasticView>
</RelativeLayout>